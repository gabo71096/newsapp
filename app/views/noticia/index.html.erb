<div class="row mb-3 px-5 gx-0">
  <div class="col-lg-6">
    <%= image_tag "logo.png", class:"main-img" %>
  </div>
  <div class="col-lg-6 my-auto text-start">
    <h1 class="title heading mb-4">News<span class="title">App</span></h1>
    <em><h2 class="title lower">Made By: Gabriel <span class="title">LÃ³pez</span></h2></em>
  </div>
</div>

<div class="accordion mb-3 mx-auto filter" id="accordion-filter">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Filtrar
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion-filter">
      <div class="accordion-body">
        <h5>Autores</h5>
        <div class="mb-3">
          <%= select_tag :author, options_for_select(@autores, "author"), class:"form-select", id:'author' %>
        </div>
        <form action="/" method="get">
          <h5>Fecha Desde</h5>
          <input class="form-control mb-3" type="date" name="from" id="from" required>
          <h5>Fecha Hasta</h5>
          <input class="form-control mb-3" type="date" name="to" id="to" required>
          <input type="submit" class="btn btn-secondary" value="Filtrar por fecha">
        </form>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
        Ordenar
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordion-filter">
      <div class="accordion-body">
        <%= select_tag :order, options_for_select([["",""],["Autor","author"],["Fecha","date"]]), class:"form-select", id:'order' %>
      </div>
    </div>
  </div>
</div>
<form action="/" method="get">
  <input type="submit" value="Quitar Filtros" class="btn btn-danger mb-3">
</form>

<div class="card-container mx-auto">
  <% @noticia.each do |noticium| %>
    <div class="card w-100 mb-5">
      <a href="/noticia/<%= noticium.id %>">
        <img src="<%= noticium.image %>" class="card-img-top" alt="<%= noticium.title %>">
        <div class="card-body text-start">
          <h1 class="fs-5 heading mb-0"><%= noticium.title %></h1>
        </div>
      </a>
    </div>
  <% end %>
</div>